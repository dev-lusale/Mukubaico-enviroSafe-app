<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MukubaicoTSFDashboard.Pages.ZEMAPage"
             Title="ZEMA Compliance"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Header -->
            <Frame BackgroundColor="#1A237E" CornerRadius="10" Padding="20" HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ZEMA" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="Environmental Management Act, No. 12 of 2011" 
                           FontSize="13" 
                           TextColor="#B3E5FC"/>
                    <Label Text="Zambia Environmental Management Agency" 
                           FontSize="12" 
                           TextColor="#90CAF9"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Compliance Score -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="20" HasShadow="True">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Overall Compliance" FontSize="16" TextColor="#666"/>
                        <Label Text="96%" FontSize="42" FontAttributes="Bold" TextColor="#4CAF50"/>
                    </VerticalStackLayout>
                    <Frame Grid.Column="1" 
                           BackgroundColor="#4CAF50" 
                           CornerRadius="40" 
                           Padding="20" 
                           WidthRequest="80" 
                           HeightRequest="80"
                           HasShadow="False"
                           VerticalOptions="Center">
                        <Label Text="âœ“" 
                               FontSize="40" 
                               TextColor="White" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Water Quality Monitoring -->
            <Label Text="Water Quality Monitoring" FontSize="18" FontAttributes="Bold" TextColor="#1A237E"/>
            
            <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="pH Levels" FontSize="16" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                        <Label Text="Current Reading:" FontSize="14" TextColor="#666"/>
                        <Label Grid.Column="1" Text="7.2 pH" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                        
                        <Label Grid.Row="1" Text="Acceptable Range:" FontSize="14" TextColor="#666"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="6.5 - 8.5 pH" FontSize="14" TextColor="#666"/>
                        
                        <Label Grid.Row="2" Text="Status:" FontSize="14" TextColor="#666"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="âœ… Within Limits" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                    </Grid>
                    <ProgressBar Progress="0.72" ProgressColor="#4CAF50" HeightRequest="8"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Turbidity" FontSize="16" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                        <Label Text="Current Reading:" FontSize="14" TextColor="#666"/>
                        <Label Grid.Column="1" Text="18 NTU" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                        
                        <Label Grid.Row="1" Text="Maximum Limit:" FontSize="14" TextColor="#666"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="25 NTU" FontSize="14" TextColor="#666"/>
                        
                        <Label Grid.Row="2" Text="Status:" FontSize="14" TextColor="#666"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="âœ… Within Limits" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                    </Grid>
                    <ProgressBar Progress="0.72" ProgressColor="#4CAF50" HeightRequest="8"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Groundwater Monitoring -->
            <Label Text="Groundwater Monitoring" FontSize="18" FontAttributes="Bold" TextColor="#1A237E" Margin="0,10,0,0"/>
            
            <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Monitoring Wells Status" FontSize="16" FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto" RowSpacing="10">
                        <Frame Grid.Column="0" BackgroundColor="#4CAF50" CornerRadius="12" Padding="8" HasShadow="False">
                            <Label Text="W1" TextColor="White" FontAttributes="Bold"/>
                        </Frame>
                        <Label Grid.Column="1" Text="Well 1 - North Boundary" FontSize="14" VerticalOptions="Center" Margin="10,0"/>
                        <Label Grid.Column="2" Text="âœ… Active" FontSize="13" TextColor="#4CAF50" VerticalOptions="Center"/>
                        
                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#4CAF50" CornerRadius="12" Padding="8" HasShadow="False">
                            <Label Text="W2" TextColor="White" FontAttributes="Bold"/>
                        </Frame>
                        <Label Grid.Row="1" Grid.Column="1" Text="Well 2 - East Boundary" FontSize="14" VerticalOptions="Center" Margin="10,0"/>
                        <Label Grid.Row="1" Grid.Column="2" Text="âœ… Active" FontSize="13" TextColor="#4CAF50" VerticalOptions="Center"/>
                        
                        <Frame Grid.Row="2" Grid.Column="0" BackgroundColor="#4CAF50" CornerRadius="12" Padding="8" HasShadow="False">
                            <Label Text="W3" TextColor="White" FontAttributes="Bold"/>
                        </Frame>
                        <Label Grid.Row="2" Grid.Column="1" Text="Well 3 - South Boundary" FontSize="14" VerticalOptions="Center" Margin="10,0"/>
                        <Label Grid.Row="2" Grid.Column="2" Text="âœ… Active" FontSize="13" TextColor="#4CAF50" VerticalOptions="Center"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,10"/>
                    <Label Text="Operational Wells: 3/3 (100%)" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Buffer Zones -->
            <Label Text="Buffer Zones Compliance" FontSize="18" FontAttributes="Bold" TextColor="#1A237E" Margin="0,10,0,0"/>
            
            <Frame BackgroundColor="White" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Community Safety Buffer" FontSize="16" FontAttributes="Bold"/>
                        <Label Grid.Column="1" Text="âœ…" FontSize="20"/>
                    </Grid>
                    <Label Text="Required Distance: 500 meters" FontSize="14" TextColor="#666"/>
                    <Label Text="Current Distance: 520 meters" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                    <Label Text="Status: Compliant - Buffer zone maintained" FontSize="13" TextColor="#4CAF50"/>
                </VerticalStackLayout>
            </Frame>

            <!-- QGIS 3D Map Integration -->
            <Label Text="QGIS 3D Mapping &amp; Analysis" FontSize="18" FontAttributes="Bold" TextColor="#1A237E" Margin="0,10,0,0"/>
            
            <Frame BackgroundColor="#E3F2FD" CornerRadius="10" Padding="15" HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ—ºï¸ QGIS Server Connected" FontSize="14" FontAttributes="Bold" TextColor="#1976D2"/>
                    <Label Text="Project: TSF-MUKUBAICO-001" FontSize="12" TextColor="#666"/>
                    <Label Text="Last Update: Just now" FontSize="12" TextColor="#666"/>
                    <BoxView HeightRequest="1" Color="#90CAF9" Margin="0,5"/>
                    <Label Text="Active Sensors: 5" FontSize="13" TextColor="#1976D2"/>
                    <Label Text="Data Refresh: Every 5 seconds" FontSize="12" TextColor="#666"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,20">
                <Button Text="ðŸ“Š View Reports" 
                        BackgroundColor="#1976D2" 
                        TextColor="White" 
                        CornerRadius="8"/>
                <Button Grid.Column="1" 
                        Text="ðŸ”„ Refresh Data" 
                        BackgroundColor="#4CAF50" 
                        TextColor="White" 
                        CornerRadius="8"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
