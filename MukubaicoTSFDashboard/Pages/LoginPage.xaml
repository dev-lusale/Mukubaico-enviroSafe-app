<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MukubaicoTSFDashboard.ViewModels"
             x:Class="MukubaicoTSFDashboard.Pages.LoginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#1A237E">

    <ScrollView>
        <Grid>
            <!-- Background Image -->
            <Image Source="login.jpg" 
                   Aspect="AspectFill" 
                   HorizontalOptions="FillAndExpand" 
                   VerticalOptions="FillAndExpand" />
            
            <!-- Semi-transparent overlay for better text readability -->
            <BoxView BackgroundColor="#1A237E" 
                     Opacity="0.3" 
                     HorizontalOptions="FillAndExpand" 
                     VerticalOptions="FillAndExpand" />

            <!-- Main Content -->
            <VerticalStackLayout VerticalOptions="Center" Padding="30" Spacing="25">
                
                <!-- Logo/Title -->
                <Frame BackgroundColor="White" CornerRadius="20" Padding="30" HasShadow="True" Margin="0,0,0,20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="MUKUBAICO" 
                               FontSize="32" 
                               FontAttributes="Bold" 
                               TextColor="#1A237E"
                               HorizontalTextAlignment="Center"/>
                        <Label Text="ENVIRO-SAFE" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="#2196F3"
                               HorizontalTextAlignment="Center"/>
                        <BoxView HeightRequest="2" Color="#2196F3" Margin="20,10"/>
                        <Label Text="TSF Safety &amp; Compliance Dashboard" 
                               FontSize="14" 
                               TextColor="#666"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Quick Start Information -->
                <Frame BackgroundColor="#4CAF50" CornerRadius="12" Padding="15" HasShadow="True" Margin="0,0,0,10">
                    <HorizontalStackLayout Spacing="12">
                        <Frame BackgroundColor="White" CornerRadius="20" Padding="0" WidthRequest="40" HeightRequest="40" HasShadow="False">
                            <Label Text="ðŸš€" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Frame>
                        <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                            <Label Text="Quick Start Guide" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            <Label Text="1. Select user type â†’ 2. Login with demo credentials â†’ 3. Access dashboard" 
                                   FontSize="12" 
                                   TextColor="#E8F5E8"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>

                <!-- User Type Selection -->
                <Frame BackgroundColor="White" CornerRadius="15" Padding="25" HasShadow="True">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Select User Type" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="#1A237E"
                               HorizontalTextAlignment="Center"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                            <!-- Operator/Admin Section -->
                            <Frame Grid.Column="0" 
                                   BackgroundColor="{Binding IsOperatorSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E3F2FD|#F5F5F5'}"
                                   BorderColor="{Binding IsOperatorSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#1976D2|#E0E0E0'}"
                                   CornerRadius="12" 
                                   Padding="20" 
                                   HasShadow="False">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectOperatorCommand}"/>
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="12">
                                    <Frame BackgroundColor="#1976D2" 
                                           CornerRadius="25" 
                                           Padding="0" 
                                           WidthRequest="50" 
                                           HeightRequest="50" 
                                           HasShadow="False"
                                           HorizontalOptions="Center">
                                        <Label Text="âš™" 
                                               FontSize="24" 
                                               TextColor="White" 
                                               HorizontalOptions="Center" 
                                               VerticalOptions="Center"/>
                                    </Frame>
                                    <Label Text="Operator/Admin" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#1A237E"
                                           HorizontalTextAlignment="Center"/>
                                    <Label Text="System operators and administrators" 
                                           FontSize="12" 
                                           TextColor="Black"
                                           HorizontalTextAlignment="Center"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Residents Section -->
                            <Frame Grid.Column="1" 
                                   BackgroundColor="{Binding IsResidentSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#E8F5E8|#F5F5F5'}"
                                   BorderColor="{Binding IsResidentSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#4CAF50|#E0E0E0'}"
                                   CornerRadius="12" 
                                   Padding="20" 
                                   HasShadow="False">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectResidentCommand}"/>
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Spacing="12">
                                    <Frame BackgroundColor="#4CAF50" 
                                           CornerRadius="25" 
                                           Padding="0" 
                                           WidthRequest="50" 
                                           HeightRequest="50" 
                                           HasShadow="False"
                                           HorizontalOptions="Center">
                                        <Label Text="ðŸ " 
                                               FontSize="24" 
                                               TextColor="White" 
                                               HorizontalOptions="Center" 
                                               VerticalOptions="Center"/>
                                    </Frame>
                                    <Label Text="Residents" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#1A237E"
                                           HorizontalTextAlignment="Center"/>
                                    <Label Text="Community members and residents" 
                                           FontSize="12" 
                                           TextColor="Black"
                                           HorizontalTextAlignment="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Login/Register Form -->
                <Frame BackgroundColor="White" CornerRadius="15" Padding="30" HasShadow="True" IsVisible="{Binding IsUserTypeSelected}">
                    <VerticalStackLayout Spacing="20">
                        
                        <!-- Form Mode Toggle -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button Grid.Column="0"
                                    Text="Sign In"
                                    BackgroundColor="{Binding IsLoginMode, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#1976D2|Transparent'}"
                                    TextColor="{Binding IsLoginMode, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White|#1976D2'}"
                                    BorderColor="#1976D2"
                                    BorderWidth="2"
                                    CornerRadius="8"
                                    Command="{Binding SwitchToLoginCommand}"/>
                            <Button Grid.Column="1"
                                    Text="Create Account"
                                    BackgroundColor="{Binding IsRegisterMode, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#1976D2|Transparent'}"
                                    TextColor="{Binding IsRegisterMode, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White|#1976D2'}"
                                    BorderColor="#1976D2"
                                    BorderWidth="2"
                                    CornerRadius="8"
                                    Command="{Binding SwitchToRegisterCommand}"/>
                        </Grid>

                        <!-- Form Title -->
                        <Label Text="{Binding FormTitle}" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="#1A237E"
                               HorizontalTextAlignment="Center"/>

                        <!-- Full Name (Register only) -->
                        <VerticalStackLayout Spacing="8" IsVisible="{Binding IsRegisterMode}">
                            <Label Text="Full Name" FontSize="14" TextColor="Black"/>
                            <Frame BorderColor="#333333" CornerRadius="8" Padding="0" HasShadow="False">
                                <Entry Text="{Binding FullName}"
                                       Placeholder="Enter your full name"
                                       PlaceholderColor="#666666"
                                       TextColor="Black"
                                       FontSize="16"
                                       Margin="15,10"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Username -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Username" FontSize="14" TextColor="Black"/>
                            <Frame BorderColor="#333333" CornerRadius="8" Padding="0" HasShadow="False">
                                <Entry Text="{Binding Username}"
                                       Placeholder="{Binding UsernamePlaceholder}"
                                       PlaceholderColor="#666666"
                                       TextColor="Black"
                                       FontSize="16"
                                       Margin="15,10"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Password -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Password" FontSize="14" TextColor="Black"/>
                            <Frame BorderColor="#333333" CornerRadius="8" Padding="0" HasShadow="False">
                                <Entry Text="{Binding Password}"
                                       Placeholder="{Binding PasswordPlaceholder}"
                                       PlaceholderColor="#666666"
                                       TextColor="Black"
                                       IsPassword="True"
                                       FontSize="16"
                                       Margin="15,10"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Confirm Password (Register only) -->
                        <VerticalStackLayout Spacing="8" IsVisible="{Binding IsRegisterMode}">
                            <Label Text="Confirm Password" FontSize="14" TextColor="Black"/>
                            <Frame BorderColor="#333333" CornerRadius="8" Padding="0" HasShadow="False">
                                <Entry Text="{Binding ConfirmPassword}"
                                       Placeholder="Confirm your password"
                                       PlaceholderColor="#666666"
                                       TextColor="Black"
                                       IsPassword="True"
                                       FontSize="16"
                                       Margin="15,10"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Error/Success Message -->
                        <Label Text="{Binding Message}"
                               TextColor="{Binding MessageColor}"
                               FontSize="13"
                               IsVisible="{Binding HasMessage}"
                               HorizontalTextAlignment="Center"/>

                        <!-- Action Button -->
                        <Button Text="{Binding ActionButtonText}"
                                Command="{Binding ActionCommand}"
                                BackgroundColor="{Binding ActionButtonColor}"
                                TextColor="white"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="50"
                                Margin="0,10,0,0"/>

                        <!-- Loading Indicator -->
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         IsVisible="{Binding IsLoading}"
                                         Color="#1976D2"
                                         HeightRequest="30"/>

                    </VerticalStackLayout>
                </Frame>

                <!-- User Information & Demo Credentials -->
                <Frame BackgroundColor="White" CornerRadius="15" Padding="20" HasShadow="True" BorderColor="#FFC107" Margin="0,10">
                    <VerticalStackLayout Spacing="15">
                        <!-- Information Header -->
                        <Frame BackgroundColor="#FFF3C4" CornerRadius="8" Padding="12" HasShadow="False">
                            <HorizontalStackLayout Spacing="10">
                                <Frame BackgroundColor="#FF9800" CornerRadius="15" Padding="0" WidthRequest="30" HeightRequest="30" HasShadow="False">
                                    <Label Text="â„¹" FontSize="18" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Frame>
                                <Label Text="User Information &amp; Demo Credentials" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="#E65100"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>

                        <!-- Login Instructions -->
                        <VerticalStackLayout Spacing="10" IsVisible="{Binding IsLoginMode}">
                            <Label Text="Ready to Login? Use these demo credentials:" 
                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="#1A237E"
                                   HorizontalTextAlignment="Center"/>
                            
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Frame Grid.Column="0" BackgroundColor="#E3F2FD" CornerRadius="10" Padding="15" HasShadow="False">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="ðŸ‘¨â€ðŸ’¼ OPERATOR/ADMIN" 
                                               FontSize="13" 
                                               FontAttributes="Bold"
                                               TextColor="#1976D2"
                                               HorizontalTextAlignment="Center"/>
                                        <BoxView HeightRequest="1" Color="#1976D2" Margin="5,0"/>
                                        <Label Text="Username:" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalTextAlignment="Center"/>
                                        <Frame BackgroundColor="#1976D2" CornerRadius="5" Padding="8,4" HasShadow="False">
                                            <Label Text="username" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalTextAlignment="Center"/>
                                        </Frame>
                                        <Label Text="Password:" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalTextAlignment="Center"/>
                                        <Frame BackgroundColor="#1976D2" CornerRadius="5" Padding="8,4" HasShadow="False">
                                            <Label Text="test1234" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalTextAlignment="Center"/>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Frame>
                                
                                <Frame Grid.Column="1" BackgroundColor="#E8F5E8" CornerRadius="10" Padding="15" HasShadow="False">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="ðŸ  RESIDENTS" 
                                               FontSize="13" 
                                               FontAttributes="Bold"
                                               TextColor="#4CAF50"
                                               HorizontalTextAlignment="Center"/>
                                        <BoxView HeightRequest="1" Color="#4CAF50" Margin="5,0"/>
                                        <Label Text="Username:" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalTextAlignment="Center"/>
                                        <Frame BackgroundColor="#4CAF50" CornerRadius="5" Padding="8,4" HasShadow="False">
                                            <Label Text="username1" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalTextAlignment="Center"/>
                                        </Frame>
                                        <Label Text="Password:" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalTextAlignment="Center"/>
                                        <Frame BackgroundColor="#4CAF50" CornerRadius="5" Padding="8,4" HasShadow="False">
                                            <Label Text="test123" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalTextAlignment="Center"/>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Account Creation Instructions -->
                        <VerticalStackLayout Spacing="10" IsVisible="{Binding IsRegisterMode}">
                            <Label Text="Creating a New Account? Follow these guidelines:" 
                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="#1A237E"
                                   HorizontalTextAlignment="Center"/>
                            
                            <Frame BackgroundColor="#F3E5F5" CornerRadius="10" Padding="15" HasShadow="False">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="ðŸ“ Account Creation Guidelines" 
                                           FontSize="13" 
                                           FontAttributes="Bold"
                                           TextColor="#7B1FA2"
                                           HorizontalTextAlignment="Center"/>
                                    <BoxView HeightRequest="1" Color="#7B1FA2" Margin="5,0"/>
                                    
                                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                                        <Label Grid.Row="0" Grid.Column="0" Text="âœ“" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                                        <Label Grid.Row="0" Grid.Column="1" Text="Full Name: Enter your complete name" FontSize="12" TextColor="Black"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" Text="âœ“" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                                        <Label Grid.Row="1" Grid.Column="1" Text="Username: Choose a unique identifier" FontSize="12" TextColor="Black"/>
                                        
                                        <Label Grid.Row="2" Grid.Column="0" Text="âœ“" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                                        <Label Grid.Row="2" Grid.Column="1" Text="Password: Minimum 6 characters" FontSize="12" TextColor="Black"/>
                                        
                                        <Label Grid.Row="3" Grid.Column="0" Text="âœ“" FontSize="14" FontAttributes="Bold" TextColor="#4CAF50"/>
                                        <Label Grid.Row="3" Grid.Column="1" Text="Confirm Password: Must match exactly" FontSize="12" TextColor="Black"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame BackgroundColor="#E1F5FE" CornerRadius="8" Padding="12" HasShadow="False">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="ðŸ’¡" FontSize="16"/>
                                    <Label Text="Tip: Choose your user type first, then create your account with appropriate credentials." 
                                           FontSize="12" 
                                           TextColor="Black"
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Quick Access Note -->
                        <Frame BackgroundColor="#FFF8E1" CornerRadius="8" Padding="12" HasShadow="False">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âš¡" FontSize="16"/>
                                <Label Text="For quick access, use the demo credentials above or create your own account." 
                                       FontSize="12" 
                                       TextColor="Black"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Footer -->
                <Label Text="Â© 2025 Mukubaico Enviro-Safe. All rights reserved." 
                       FontSize="11" 
                       TextColor="#FFFFFF80"
                       HorizontalTextAlignment="Center"
                       Margin="0,20,0,0"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
